<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="useAppTint"
    android:theme="@style/Theme.WirelessDebuggingSwitch.OneUiIntegration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_magisk_24"
        android:tint="?android:attr/textColorSecondary"
        android:importantForAccessibility="no"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.TitleMedium"
        tools:text="Error heading!"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="48dp"/>

    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.BodyMedium"
        tools:text="Error explanation. A very long one in fact, tho it probably won't take more than two lines."
        android:gravity="center"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginHorizontal="48dp"/>

</LinearLayout>
